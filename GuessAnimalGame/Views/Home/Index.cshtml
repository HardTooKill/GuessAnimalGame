
<div class="jumbotron">
    <h1>Step 1</h1>
</div>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="dropdown_animal ">Please select an animal from the list</label>
                @Html.DropDownList("ListItem", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <a href="@Url.Action("Add", "Home")">Add more animals</a>
            </div>
            <button type="submit" class="btn btn-default">Next</button>
        </div>
    </div>
}